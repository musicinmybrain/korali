#include "korali.hpp"

Korali::Problem::Base* Korali::Problem::Base::getProblem(Korali::Problem::Base* problem, nlohmann::json& js)
{
 std::string problemType = "Undefined";

 if (! isDefined(js, "['Type']")) Korali::logError("No problem type provided.\n");

 problemType = js["Type"].get<std::string>();

 // Problem list

 if (problem == nullptr) Korali::logError("Unrecognized problem type provided: ['Type'] = %s.\n", problemType.c_str());

 problem->setConfiguration(js);
 problem->initialize(problem);
 return problem;
}
