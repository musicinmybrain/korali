#ifndef _KORALI_SOLVER_DQN_HPP_
#define _KORALI_SOLVER_DQN_HPP_

#include "modules/problem/reinforcementLearning/reinforcementLearning.hpp"
#include "modules/solver/solver.hpp"

namespace korali
{
namespace solver
{
class DQN : public Solver
{
  public:
  /**
   * @brief Storage for the pointer to the learning problem
   */
  problem::ReinforcementLearning *_problem;

  /**
 * @brief Korali engine for running internal experiments
 */
  korali::Engine _engine;

  /**
 * @brief Korali experiment for optimizing the action based on a trained Q-Network
 */
  korali::Experiment _AExperiment;

  /**
 * @brief Vector of the current state to use for action optimization
 */
  std::vector<double>* _currentState;

  /**
   * @brief Gets the next action for the actor, based on the Q policy
   */
  void getAction(std::vector<double>& action, std::vector<double>& state);

  /**
   * @brief Function to evaluate the Q* of a given action
   */
  void evaluateAction(Sample &sample, std::vector<double>* state, bool getGradients);

  /**
  * @brief Runs a generation of the environment(s), running an action on each episode, and updating the policy.
  */
  void runGeneration() override;
  void setInitialConfiguration() override;
  void initialize() override;
};

} // namespace solver
} // namespace korali

#endif // _KORALI_SOLVER_DQN_HPP_
