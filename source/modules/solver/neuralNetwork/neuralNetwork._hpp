#ifndef _KORALI_SOLVER_NEURALNETWORK_HPP_
#define _KORALI_SOLVER_NEURALNETWORK_HPP_

#include "modules/solver/solver.hpp"
#include "modules/layer/layer.hpp"
#include "modules/distribution/univariate/uniform/uniform.hpp"
#include "modules/problem/supervisedLearning/supervisedLearning.hpp"

#ifdef _KORALI_USE_ONEDNN
#include "dnnl.hpp"
#endif

namespace korali { namespace solver {

class NeuralNetwork : public korali::Solver
{
 public:

 /**
  * @brief Storage for the pointer to the learning problem
  */
 korali::problem::SupervisedLearning *_problem;

 #ifdef _KORALI_USE_ONEDNN
 /**
   * @brief oneDNN Engine
   */
 dnnl::engine _engine;

 /**
   * @brief oneDNN Stream to run operations
   */
 dnnl::stream _stream;

 #endif

 /**
  * @brief Performs Training Operations
  */
 void doTraining();

 /**
  * @brief Forwards a new set of input variables through the trained NN
 */
 void doForwarding();

 void setInitialConfiguration() override;
 void runGeneration() override;
 void printGenerationBefore() override;
 void printGenerationAfter() override;

};

} } // namespace korali::solver


#endif // _KORALI_SOLVER_NEURALNETWORK_HPP_
