#include "modules/problems/direct/base.hpp"
#include "modules/engine/engine.hpp"

bool Korali::Problem::Direct::Base::isSampleFeasible(const std::vector<double>& sample)
{
  for (size_t i = 0; i < sample.size(); i++)
  {
    if (std::isfinite(sample[i]) == false) return false;
    if (sample[i] < _variables[i]->_lowerBound) return false;
    if (sample[i] > _variables[i]->_upperBound) return false;
  }
  return true;
}
