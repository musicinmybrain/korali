#include "modules/problems/direct/sampling/sampling.hpp"
#include "modules/conduits/base.hpp"

void Korali::Problem::Direct::Sampling::initialize()
{
 if (_variables.size() == 0) Korali::logError("Sampling problems require at least one variable.\n");
}

double Korali::Problem::Direct::Sampling::evaluateSample(const std::vector<double>& sample)
{
 std::vector<double> result = _k->_conduit->evaluateSample(sample, _objectiveFunction);
 if (result.size() != 0) Korali::logError("Sampling problems require exactly 1 result. Provided: %lu.\n", result.size());
 return result[0];
}
