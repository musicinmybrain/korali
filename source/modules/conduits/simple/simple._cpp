#include "korali.hpp"

void Korali::Conduit::Simple::evaluateSample(double* target, size_t targetId)
{
 std::vector<double> sampleVector;
 for (size_t i = 0; i < _k->_problem->getVariableCount(); i++)
  sampleVector.push_back(target[i]);

 _k->_problem->runModel(sampleVector, targetId);
 double fitness = _k->_problem->evaluateTarget();

 _k->_modelEvaluationCount++;
 _k->_solver->processEvaluation(targetId, fitness);
}

