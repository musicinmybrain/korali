#include "korali.hpp"

void Korali::Laplace::initialize()
{
 Korali::Base::initialize();

 if (_scale > 0) _aux = -gsl_sf_log( _scale * M_PI);
}

void Korali::Laplace::finalize()
{
}

void setProperty(std::string propertyName, double value)
{
}

double Korali::Laplace::getDensity(double x)
{
 return gsl_ran_laplace_pdf( x-_a, _b );
}

double Korali::Laplace::getLogDensity(double x)
{
 return _aux - fabs(x-_a)/_b;
}

double Korali::Laplace::getRandomNumber()
{
 return _a + gsl_ran_laplace(_range, _b);
}

