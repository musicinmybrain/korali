#include "korali.hpp"

void Korali::Uniform::initialize()
{
 Korali::Base::initialize();

 if (_scale > 0) _aux = -gsl_sf_log( _scale * M_PI);
}

void Korali::Uniform::finalize()
{
}

void setProperty(std::string propertyName, double value)
{
}

double Korali::Uniform::getDensity(double x)
{
 return gsl_ran_flat_pdf(x, _a, _b);
}

double Korali::Uniform::getLogDensity(double x)
{
 if (x >= _a && x <= _b) return _aux; return -INFINITY;
}

double Korali::Uniform::getRandomNumber()
{
 return gsl_ran_flat(_range, _a, _b);
}

