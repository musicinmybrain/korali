#include "korali.hpp"

void Korali::Geometric::initialize()
{
 Korali::Base::initialize();

 if (_scale > 0) _aux = -gsl_sf_log( _scale * M_PI);
}

void Korali::Geometric::finalize()
{
}

void setProperty(std::string propertyName, double value)
{
}

double Korali::Geometric::getDensity(double x)
{
 return gsl_ran_geometric_pdf((int)x, _a);
}

double Korali::Geometric::getLogDensity(double x)
{
 return log(_a) + (x-1)*log(1.0-_a);
}

double Korali::Geometric::getRandomNumber()
{
 return gsl_ran_geometric(_range, _a);
}

