#include "korali.hpp"

void Korali::Exponential::initialize()
{
 Korali::Base::initialize();

 _aux = 0.0;
}

void Korali::Exponential::finalize()
{
}

void setProperty(std::string propertyName, double value)
{
}

double Korali::Exponential::getDensity(double x)
{
 return gsl_ran_exponential_pdf(x-_location, _mean);
}

double Korali::Exponential::getLogDensity(double x)
{
 if (x-_location < 0) return -INFINITY; return - log(_mean) - (x-_location)/_mean;
}

double Korali::Exponential::getRandomNumber()
{
 return _location + gsl_ran_exponential(_range, _mean);
}

