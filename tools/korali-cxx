
flags=-O3 

GSLPPREFIX=`$GSLCONFIG --prefix`
GSLLIBS=`$GSLCONFIG --libs`
GSLCFLAGS=`$GSLCONFIG --cflags`

if [[ "$@" == *"-o"* ]]; then
  flags+=" $LDFLAGS $PREFIX/lib/libkorali.a -L$PREFIX/lib -L$GSLPPREFIX/lib -Wl,-rpath -Wl,$GSLPPREFIX/lib $GSLLIBS " 
fi

if [[ "$@" == *"-c"* ]]; then
 flags+=" $CXXFLAGS"
 
 if [ $USE_MPI -eq 1 ]; then
  flags+=" -D_KORALI_USE_MPI"
 fi
fi

#echo "$CXX $@ $flags"
$CXX $@ $flags
