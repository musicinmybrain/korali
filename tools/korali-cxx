
flags=-O3 

if [[ "$@" == *"-o"* ]]; then
  flags+=" $LDFLAGS $PREFIX/lib/libkorali.a -L$PREFIX/lib -Wl,-rpath $PREFIX/lib -lgsl -lgslcblas" 
fi

if [[ "$@" == *"-c"* ]]; then
 flags+=" $CXXFLAGS"
 
 if [ $USE_MPI -eq 1 ]; then
  flags+=" -D_KORALI_USE_MPI"
 fi
fi

#echo "$CXX $@ $flags"
$CXX $@ $flags
